---
/**
 * Navigation Component
 *
 * A responsive navigation bar that provides site-wide navigation.
 * Uses shadcn/ui Button components for consistent styling.
 * Desktop navigation is static (Astro), mobile menu uses React for interactivity.
 * Automatically highlights the active page based on current path.
 */
import { Button } from "@/components/ui/button";
import { MobileMenu } from "@/components/MobileMenu";
import AuthButton from "@/components/auth/AuthButton";
import { PackageOpen } from "lucide-react";

interface Props {
  user?: {
    id: string;
    email: string | null;
  };
}

const currentPath = Astro.url.pathname;
const { user }: Props = Astro.props;
const isAuthenticated = Boolean(user);
const shouldShowAuthButton = isAuthenticated || currentPath !== "/login";

const navItems = [
  { name: "Home", href: "/" },
  { name: "Inventory", href: "/inventory" },
  { name: "Shopping List", href: "/shopping-list" },
];

const isActive = (href: string) => {
  if (href === "/") {
    return currentPath === "/";
  }
  return currentPath.startsWith(href);
};

// Prepare nav items with active state for React component
const navItemsWithState = isAuthenticated
  ? navItems.map((item) => ({
      ...item,
      isActive: isActive(item.href),
    }))
  : [];
---

<nav
  class="sticky top-0 z-50 w-full border-b border-border/40 bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
  role="navigation"
  aria-label="Main navigation"
>
  <div class="container mx-auto px-4">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo/Brand -->
      <a
        href="/"
        class="flex items-center gap-2 text-xl font-bold tracking-tight text-foreground transition-colors hover:text-primary/90"
        aria-label="Stocksy home"
      >
        <PackageOpen className="h-6 w-6" />
        Stocksy
      </a>

      <!-- Desktop Navigation -->
      <div class="flex items-center gap-4">
        {
          isAuthenticated && (
            <ul class="hidden items-center gap-1 md:flex" role="list">
              {navItems.map((item) => (
                <li>
                  <Button variant="ghost" size="sm" asChild>
                    <a
                      href={item.href}
                      class={
                        isActive(item.href)
                          ? "bg-secondary text-secondary-foreground shadow-sm"
                          : "text-muted-foreground transition-colors hover:text-foreground"
                      }
                      aria-current={isActive(item.href) ? "page" : undefined}
                    >
                      {item.name}
                    </a>
                  </Button>
                </li>
              ))}
            </ul>
          )
        }

        <div class="flex items-center gap-2">
          {
            isAuthenticated && user?.email && (
              <p class="hidden text-sm font-medium text-muted-foreground md:block" aria-live="polite">
                {user.email}
              </p>
            )
          }

          {isAuthenticated && <MobileMenu client:load items={navItemsWithState} />}

          {shouldShowAuthButton && <AuthButton client:load isAuthenticated={isAuthenticated} />}
        </div>
      </div>
    </div>
  </div>
</nav>
