---
/**
 * Navigation Component
 *
 * A responsive navigation bar that provides site-wide navigation.
 * Uses shadcn/ui Button components for consistent styling.
 * Desktop navigation is static (Astro), mobile menu uses React for interactivity.
 * Automatically highlights the active page based on current path.
 */
import { Button } from "@/components/ui/button";
import { MobileMenu } from "@/components/MobileMenu";
import { UserNav } from "@/components/auth/UserNav";
import { PackageOpen } from "lucide-react";
import { cn } from "@/lib/utils";

interface Props {
  user?: {
    id: string;
    email: string | null;
  };
}

const currentPath = Astro.url.pathname;
const { user }: Props = Astro.props;
const isAuthenticated = Boolean(user);
const shouldShowAuthButton = isAuthenticated || currentPath !== "/login";

const navItems = [
  { name: "Home", href: "/" },
  { name: "Inventory", href: "/inventory" },
  { name: "Shopping List", href: "/shopping-list" },
];

const isActive = (href: string) => {
  if (href === "/") {
    return currentPath === "/";
  }
  return currentPath.startsWith(href);
};

// Prepare nav items with active state for React component
const navItemsWithState = isAuthenticated
  ? navItems.map((item) => ({
      ...item,
      isActive: isActive(item.href),
    }))
  : [];
---

<nav
  class="sticky top-0 z-50 w-full border-b border-border/40 bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
  role="navigation"
  aria-label="Main navigation"
>
  <div class="mx-auto flex h-16 w-full items-center px-4 sm:px-6 lg:px-8">
    <div class="mr-4 hidden md:flex">
      <a href="/" class="mr-8 flex items-center space-x-2" aria-label="Stocksy home">
        <div class="flex h-6 w-6 items-center justify-center rounded-md bg-primary text-primary-foreground">
          <PackageOpen className="h-4 w-4" />
        </div>
        <span class="hidden font-bold sm:inline-block">Stocksy</span>
      </a>
      {
        isAuthenticated && (
          <nav class="flex items-center gap-6 text-sm font-medium">
            {navItems.map((item) => (
              <a
                href={item.href}
                class={cn(
                  "transition-colors hover:text-foreground/80",
                  isActive(item.href) ? "text-foreground font-semibold" : "text-foreground/60"
                )}
                aria-current={isActive(item.href) ? "page" : undefined}
              >
                {item.name}
              </a>
            ))}
          </nav>
        )
      }
    </div>

    <!-- Mobile Logo (visible only when desktop nav is hidden) -->
    <a href="/" class="mr-auto flex items-center space-x-2 md:hidden" aria-label="Stocksy home">
      <div class="flex h-6 w-6 items-center justify-center rounded-md bg-primary text-primary-foreground">
        <PackageOpen className="h-4 w-4" />
      </div>
      <span class="font-bold">Stocksy</span>
    </a>

    <div class="flex flex-1 items-center justify-end gap-4">
      {
        isAuthenticated && user ? (
          <>
            <MobileMenu client:load items={navItemsWithState} />
            <UserNav client:load user={user} />
          </>
        ) : (
          shouldShowAuthButton && (
            <Button size="sm" asChild>
              <a href="/login">Sign in</a>
            </Button>
          )
        )
      }
    </div>
  </div>
</nav>
